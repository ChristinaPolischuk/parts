form.filter-form
    .filter-form__header
        h6.filter-form__title Car Filters
        span.filter-form__descr what filters will fit your car
    .filter-form__body
        h6.filter-form__title Specify make, year and model to find filters:
        .filter-form__content
            .custom-select
                label.custom-select__label Year
                .custom-select__header
                    | Select
                    +icon("arrow-down", "custom-select__icon")
                .custom-select__body
                    .scroll(data-simplebar, data-simplebar-auto-hide="false")
                        .custom-select__item(data-value="2022") 2022
                        .custom-select__item(data-value="2021") 2021
                        .custom-select__item(data-value="2020") 2020
                        .custom-select__item(data-value="2019") 2019
